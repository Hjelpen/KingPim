@model KingPim.Models.ModelViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>Create a new category!</p>
<form asp-action="Create" enctype="multipart/form-data">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <input type="submit" value="Create" class="btn btn-success pull-right" />
    </div>
</form>
 
<h2>Categories</h2>
@foreach (var category in Model.Categories)
{
    <li>@Html.ActionLink(category.Name, "Details", "Categories", new { Id = category.CategoryID }, null)</li>
        
}